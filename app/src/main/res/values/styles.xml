<resources>

    <!-- Base application theme. -->
    <style name="ColorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMaterialIndigo</item>
        <item name="colorPrimaryDark">@color/colorMaterialIndigoDark</item>
        <item name="colorAccent">@color/colorMaterialPink</item>
    </style>

    <style name="ColorTheme.LoginWindow">
        <item name="colorAccent">@color/colorMaterialGreen</item>
    </style>

    <style name="ColorTheme.Preferences">
        <item name="colorAccent">@color/colorMaterialGreen</item>
    </style>

    <style name="ColorTheme.MainWindow">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorMaterialPink</item>
    </style>

    <style name="ColorTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ColorTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ColorTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
